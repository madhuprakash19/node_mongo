<%- include("partials/header"); -%>
    <div class="container home-body">
        <div class="sign card">
            <div class="card-body">
                <h1 class="text-center">Sign Up</h1>
                <!-- Makes POST request to /register route -->
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="userhandle">Username</label>
                        <input type="text" class="form-control" name="userhandle" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="branch">Branch</label>
                        <input type="text" class="form-control" name="branch" required>
                    </div>
                    <div class="form-group">
                        <label for="usn">USN</label>
                        <input type="text" class="form-control" name="usn" required>
                    </div>
                    <div class="form-group">
                        <label for="sem">Current sem</label>
                        <input type="text" class="form-control" name="sem" required>
                    </div>
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="email" class="form-control" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Sign Up</button>
                </form>
            </div>

        </div>
    </div>
    <%- include("partials/footer"); -%>