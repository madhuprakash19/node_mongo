<%- include("partials/header"); -%>
    <div class="container-fluid home-body">

        <% if (authenticated) { %>
            <h1>Update your own post.</h1>

            <form action="/update" method="POST">
                <input type="hidden" name="postid" value=<%=userPost._id%>>
                <div class="form-group">
                    <label for="post-title">Title</label>
                    <input type="text" name="postTitle" class="form-control" id="post-title"
                        value="<%=userPost.title%>">
                </div>

                <div class="form-group col-md-6">
                    <label for="company">Company Name</label>
                    <input type="text" name="company" class="form-control" value="<%=userPost.company%>">
                </div>

                <div class="form-group col-md-6">
                    <label for="position">Role Offered</label>
                    <input type="text" name="position" class="form-control" value="<%=userPost.company_position%>">
                </div>

                <div class="form-group col-md-6">
                    <label for="salary">Salary</label>
                    <input type="text" name="salary" class="form-control" value="<%=userPost.salary%>">
                </div>

                <div class="form-group col-md-6">
                    <label for="startdate">Start Date</label>
                    <input type="text" name="startdate" class="form-control" value="<%=userPost.startdate%>">
                </div>

                <div class="form-group col-md-6">
                    <label for="postbody">Rounds Attended</label>
                    <input type="text" name="postBody" class="form-control" id="postbody" value="<%=userPost.rounds%>">
                </div>

                <div class="form-group col-md-6">
                    <label for="postbody"> Small Description</label>
                    <input type="text" name="postBody" class="form-control" id="postbody" value="<%=userPost.content%>">
                </div>

                <div class="form-group">
                    <label for="postmarkdown">Markdown</label>

                    <textarea name="postMarkdown" class="form-control" id="postmarkdown"
                        rows="15"><%= userPost.markdown%></textarea>
                </div>
                <button type="submit" class="rm-btn">Update</button><br>

            </form>


            <% } else { %>
                <h1>Please <a href="/signin">Sign In </a>to update your own post </h1>
                <% } %>
    </div>
    <%- include("partials/footer"); -%>